<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ThemeOverlay.KingCalculator.TableInfoItemCardView.Party"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_name"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/game_collum_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            tools:text="Do Not Take Tricks"
            app:layout_constraintHorizontal_weight="1"
            android:textAppearance="?attr/textAppearanceBody2"
            style="@style/Widget.KingCalculator.TextView.Table.FirstColumn"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_collum_one"
            app:layout_constraintStart_toEndOf="@id/game_name"
            app:layout_constraintEnd_toStartOf="@id/game_collum_two"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="-2000"
            app:layout_constraintHorizontal_weight="1"
            android:textAppearance="?attr/textAppearanceBody2"
            style="@style/Widget.KingCalculator.TextView.Table.OtherColumn"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_collum_two"
            app:layout_constraintStart_toEndOf="@id/game_collum_one"
            app:layout_constraintEnd_toStartOf="@id/game_collum_three"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="-2000"
            app:layout_constraintHorizontal_weight="1"
            android:textAppearance="?attr/textAppearanceBody2"
            style="@style/Widget.KingCalculator.TextView.Table.OtherColumn"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_collum_three"
            app:layout_constraintStart_toEndOf="@id/game_collum_two"
            app:layout_constraintEnd_toStartOf="@id/game_collum_four"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="-2000"
            app:layout_constraintHorizontal_weight="1"
            android:textAppearance="?attr/textAppearanceBody2"
            style="@style/Widget.KingCalculator.TextView.Table.OtherColumn"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_collum_four"
            app:layout_constraintStart_toEndOf="@id/game_collum_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="-2000"
            app:layout_constraintHorizontal_weight="1"
            android:textAppearance="?attr/textAppearanceBody2"
            style="@style/Widget.KingCalculator.TextView.Table.OtherColumn"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>