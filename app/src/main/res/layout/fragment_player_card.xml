<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ThemeOverlay.KingCalculator.EditLayout"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/player_email"
        android:layout_width="@dimen/material_textview_width"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/player_name"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginVertical="@dimen/big_margin"
        android:textAppearance="?attr/textAppearanceBody1"
        style="@style/Widget.KingCalculator.TextView.Main"
        tools:text="jesus@email.haven"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/player_name"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/material_textview_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_email"
        app:layout_constraintBottom_toTopOf="@id/bttn_save"
        android:hint="@string/card_player_name"
        app:endIconMode="clear_text"
        app:helperTextEnabled="true"
        app:helperText="@string/card_helper_text"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/custom_counter_length"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/player_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:nextFocusDown="@id/bttn_save"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bttn_save"
        android:layout_width="@dimen/material_textview_width"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_name"
        app:layout_constraintBottom_toTopOf="@id/bttn_delete"
        android:layout_marginTop="@dimen/big_margin"
        android:text="@string/button_save_player"
        style="@style/Widget.KingCalculator.Button"
        />

    <Button
        android:id="@+id/bttn_delete"
        android:layout_width="@dimen/material_textview_width"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bttn_save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/button_delete_player"
        style="?attr/materialButtonOutlinedStyle"
        />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_name"
        android:layout_marginTop="@dimen/big_margin"
        />

</androidx.constraintlayout.widget.ConstraintLayout>