<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ThemeOverlay.KingCalculator.TableInfoItemCardView.Player"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/info_type"
        android:layout_width="0dp"
        android:layout_height="@dimen/rule_min_item_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/info_value"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textAppearance="?attr/textAppearanceBody1"
        style="@style/Widget.KingCalculator.TextView.Table.FirstColumn"
        tools:text="Games played:"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/info_value"
        android:layout_width="0dp"
        android:layout_height="@dimen/rule_min_item_height"
        app:layout_constraintStart_toEndOf="@id/info_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:textAppearance="?attr/textAppearanceBody1"
        style="@style/Widget.KingCalculator.TextView.Table.OtherColumn"
        tools:text="126"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>