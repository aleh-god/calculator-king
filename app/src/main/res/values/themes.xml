<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KingCalculator" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Primary brand color. -->
        <!-- The color displayed most frequently across your appâ€™s screens and components. This color should pass accessibilty guidelines for text / iconography when drawn on top of the surface or background color.-->
        <item name="colorPrimary">@color/primaryBrandGreen</item>
        <!-- A tonal variation of the primary color.-->
        <item name="colorPrimaryVariant">@color/primaryDarkBrandGreen</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top of the primary color.-->
        <item name="colorOnPrimary">@color/secondaryLightBrandGold</item>

        <!-- Secondary brand color. -->
        <!-- The secondary branding color for the app, usually an accented complement to the primary branding color.-->
        <item name="colorSecondary">@color/secondaryBrandGold</item>
        <!-- A tonal variation of the secondary color.-->
        <item name="colorSecondaryVariant">@color/secondaryDarkBrandGold</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top of the secondary color.-->
        <item name="colorOnSecondary">@color/secondaryTextBrand</item>

        <!-- The background color appears behind scrollable content.-->
        <item name="android:colorBackground">@color/primaryLightBrandGreen</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top of the background color.-->
        <item name="colorOnBackground">@color/primaryBrandGold</item>
        <!-- Surface colors affect surfaces of components, such as cards, sheets, and menus.-->
        <item name="colorSurface">@color/primaryDarkBrandGreen</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top of the surface color.-->
        <item name="colorOnSurface">@color/secondaryLightBrandGold</item>
        <!-- Error color indicates errors states, for components such as text fields-->
        <item name="colorError">@color/secondaryDarkBrandRed</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top of the error color.-->
        <item name="colorOnError">@color/secondaryLightBrandGold</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Widget.KingCalculator.TextView</item>

    </style>

    <style name="ThemeOverlay.CurrencyAppSample" parent="">
