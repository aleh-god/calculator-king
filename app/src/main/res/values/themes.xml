<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KingCalculator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brandBasilGreen800</item>
        <item name="colorPrimaryVariant">@color/brandBasilGreen500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brandBasilOrange800</item>
        <item name="colorSecondaryVariant">@color/brandOrange500</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/brandBasilGreen50</item>
        <item name="colorOnSurface">@color/brandBasilOrange800</item>

        <item name="android:colorBackground">@color/brandBasilOrange50</item>
        <item name="colorOnBackground">@color/brandGreen900</item>

        <!-- TextView Style. -->
        <item name="android:textViewStyle">@style/Widget.KingCalculator.TextView</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>

    </style>
</resources>