    <item name="colorSecondary">@color/secondaryBrandGold</item>
    <item name="colorSecondaryVariant">@color/secondaryDarkBrandGold</item>
    <item name="colorOnSecondary">@color/secondaryTextBrand</item>
    </style>

</resources>